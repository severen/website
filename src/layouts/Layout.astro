interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="The personal website of Severen Redwood."
    />
    <meta name="author" content="Severen Redwood" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
  </head>

  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;

    /*
      The light and dark colours are taken from Catppuccin Latte and Catppuccin
      Mocha, respectively.
    */
    --background-color: light-dark(
      oklch(95.78% 0.0058 264.53deg),
      oklch(24.29% 0.0304 283.91deg)
    );
    --text-color: light-dark(
      oklch(43.55% 0.043 279.33deg),
      oklch(87.87% 0.0426 272.28deg)
    );
    --overlay-color: light-dark(
      oklch(60.09% 0.0305 278.69deg),
      oklch(68.65% 0.0374 274.73deg)
    );
    --accent-color: light-dark(
      oklch(66.38% 0.1751 273.13deg),
      oklch(76.64% 0.1113 259.88deg)
    );
  }

  html {
    box-sizing: border-box;
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  *::selection {
    background-color: oklch(from var(--overlay-color) l c h / 30%);
  }

  body {
    font-family: ui-sans-serif, system-ui, sans-serif;
    color: var(--text-color);
    background-color: var(--background-color);
  }

  main {
    margin: auto;
    max-width: 65ch;
    padding: 1rem;
  }

  p {
    hyphens: auto;
    text-align: justify;
  }

  a {
    color: inherit;
    text-decoration: inherit;
    border-radius: 6px;
    transition-property: background;
    transition-duration: 0.2s;

    &:hover {
      background: oklch(from var(--accent-color) l c h / 20%);
    }

    &:active {
      color: var(--accent-color);
    }

    &::after {
      position: relative;
      top: -0.1em;
      margin-left: 0.1em;
      content: "\2060Â°";
      font-size: 90%;
    }
  }

  /* Desktop */
  @media (width >= 1024px) {
    body {
      font-size: 1.25rem;
    }
  }
</style>
